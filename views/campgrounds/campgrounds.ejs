<%-include("../partials/header")%>
<%if(currentUser && currentUser.isAdmin){%>
<h1>
	You are an admin
</h1>
<%}%>
<div class="container">

<header class="jumbotron">
	<div class="container">
	<h1>Welcome to YelpCamp</h1>
	<p>
		View the campgrounds from all over the world
	</p>
	<p>
		<a class="btn btn-primary" href="/campgrounds/new">create new Campground</a>
	</p>
		<p>
              <form action="/campgrounds" method="GET" class="form-inline" id="campground-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Campground search..." class="form-control">
					<input type="submit" value="search" class="btn btn-primary">
                </div>
              </form>
             </p>
	</div>
</header>
	<div class="row" style="display:flex,flex-wrap:wrap;">
		<div class="col-md-12">
			<%if(noMatch!==undefined){%>
			<h1>
				<%=noMatch%>
			</h1>
			<%}%>
		</div>
		<% campgrounds.forEach(function(campground){%>
<div class="col-md-3 col-sm-6" >
	<div class="card">
<img src="<%=campground.image%>">
	<div class="card-title">
		<h4><%=campground.name%></h4>
	</div>
		<div class="card-text">
		<h4><%=campground.description%></h4>
	</div>
		
		<p>
			<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View More</a>
		</p>
</div>
	</div>
<%})%>
</div>

		
<%-include("../partials/footer")%>